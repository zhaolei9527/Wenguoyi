<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y75"
        android:layout_marginLeft="@dimen/x10"
        android:orientation="horizontal">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/SimpleDraweeView"
            android:layout_width="@dimen/x52"
            android:layout_height="@dimen/x52"
            android:layout_centerVertical="true"
            android:background="@mipmap/demoyisheng" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x5"
            android:layout_marginTop="@dimen/x15"
            android:layout_toRightOf="@id/SimpleDraweeView"
            android:text="医生姓名"
            android:textColor="@color/text333"
            android:textSize="@dimen/x16" />

        <TextView
            android:id="@+id/tv_zhicheng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x15"
            android:layout_marginTop="@dimen/x15"
            android:text="综合门诊 | 主任医师"
            android:textColor="@color/text333"
            android:textSize="@dimen/x12" />

        <TextView
            android:layout_marginTop="@dimen/x5"
            android:layout_marginLeft="@dimen/x5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:layout_toRightOf="@id/SimpleDraweeView"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="擅长：高血压、糖尿病、血脂异常、冠心病、脑卒中（中风）、脑卒中偏瘫的康复治疗；痉挛的肉…"
            android:textColor="@color/text333"
            android:textSize="@dimen/x12" />

    </RelativeLayout>

</LinearLayout>
