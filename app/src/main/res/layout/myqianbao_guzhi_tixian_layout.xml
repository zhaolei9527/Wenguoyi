<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_c_wyaotixian"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/x15"
    android:paddingTop="@dimen/x15"
    android:background="@color/bgfff"
    android:visibility="visible">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x10"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="提现账户"
                    android:textColor="@color/text333"
                    android:textSize="@dimen/x15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x15"
                    android:text="微信零钱"
                    android:textColor="@color/bgtitle"
                    android:textSize="@dimen/x15" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x15"
                android:text="提现数量"
                android:textColor="@color/text666"
                android:textSize="@dimen/x14" />

            <EditText
                android:id="@+id/et_tixianmoney"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y40"
                android:layout_marginTop="@dimen/x10"
                android:background="@null"
                android:hint="请输入提现数量"
                android:inputType="numberDecimal"
                android:textSize="@dimen/x18" />

            <TextView
                android:id="@+id/tv_ketixian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x15"
                android:text="可提现金额：￥0.00"
                android:textColor="@color/text666"
                android:textSize="@dimen/x13" />

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="@dimen/x303"
                android:layout_height="@dimen/y32"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/x15"
                android:layout_marginTop="@dimen/x20"
                android:background="@drawable/bg_login"
                android:text="立即提现"
                android:textColor="@color/bgfff" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
