<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_c_wyaotixian"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/x15"
    android:paddingTop="@dimen/x15"
    android:background="@color/bgfff"
    android:visibility="visible">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x15"
                android:text="转出数量"
                android:textColor="@color/text666"
                android:textSize="@dimen/x14" />

            <EditText
                android:id="@+id/et_tixianmoney"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y40"
                android:layout_marginTop="@dimen/x10"
                android:background="@null"
                android:hint="请输入转出数量"
                android:inputType="numberDecimal"
                android:textSize="@dimen/x18" />

            <TextView
                android:id="@+id/tv_ketixian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x15"
                android:text="可转出金额：￥0.00"
                android:textColor="@color/text666"
                android:textSize="@dimen/x13" />

            <TextView
                android:id="@+id/tv_ketixianTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x15"
                android:text="可转出时间："
                android:textColor="@color/text666"
                android:textSize="@dimen/x13" />

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="@dimen/x303"
                android:layout_height="@dimen/y32"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/x15"
                android:layout_marginTop="@dimen/x20"
                android:background="@drawable/bg_login"
                android:text="立即转出"
                android:textColor="@color/bgfff" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
