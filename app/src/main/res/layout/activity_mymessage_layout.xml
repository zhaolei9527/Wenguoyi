<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgea"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x42"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/bgtitle"
        android:visibility="visible">

        <FrameLayout
            android:id="@+id/rl_back"
            android:layout_width="@dimen/x30"
            android:layout_height="@dimen/x30"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:background="@mipmap/fanhui" />

        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="个人资料"
            android:textColor="@color/bgfff"
            android:textSize="@dimen/x16" />

    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y39"
                android:background="@color/bgfff"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x10"
                    android:text="真实姓名："
                    android:textColor="#333"
                    android:textSize="@dimen/x13" />

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/x10"
                    android:layout_weight="1"
                    android:background="#00ffffff"
                    android:gravity="end|center_vertical"
                    android:hint="请填写"
                    android:inputType="text"
                    android:maxLength="11"
                    android:maxLines="1"
                    android:textColor="#999"
                    android:textColorHint="#999"
                    android:textSize="@dimen/x12" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#ccc"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y39"
                android:background="@color/bgfff"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x10"
                    android:text="手机号："
                    android:textColor="#333"
                    android:textSize="@dimen/x13" />

                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/x10"
                    android:layout_weight="1"
                    android:background="#00ffffff"
                    android:gravity="end|center_vertical"
                    android:hint="请填写"
                    android:inputType="text"
                    android:maxLength="11"
                    android:maxLines="1"
                    android:textColor="#999"
                    android:textColorHint="#999"
                    android:textSize="@dimen/x12" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#ccc"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y39"
                android:background="@color/bgfff"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x10"
                    android:text="身份证号："
                    android:textColor="#333"
                    android:textSize="@dimen/x13" />

                <EditText
                    android:id="@+id/et_shenfenzheng"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/x10"
                    android:layout_weight="1"
                    android:background="#00ffffff"
                    android:gravity="end|center_vertical"
                    android:hint="请填写"
                    android:inputType="text"
                    android:maxLength="11"
                    android:maxLines="1"
                    android:textColor="#999"
                    android:textColorHint="#999"
                    android:textSize="@dimen/x12" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#ccc"></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginTop="@dimen/x10"
                android:text="请上传身份证照片"
                android:textColor="@color/text666"
                android:textSize="@dimen/x15" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x15"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="@dimen/x140"
                        android:layout_height="@dimen/y84"
                        android:background="@color/bgfff"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/x50"
                            android:layout_height="@dimen/y37"
                            android:layout_centerInParent="true"
                            android:src="@mipmap/getphoto" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/x5"
                        android:text="身份证正面照"
                        android:textColor="@color/text333"
                        android:textSize="@dimen/x12" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x10"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="@dimen/x140"
                        android:layout_height="@dimen/y84"
                        android:background="@color/bgfff"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/x50"
                            android:layout_height="@dimen/y37"
                            android:layout_centerInParent="true"
                            android:src="@mipmap/getphoto" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/x5"
                        android:text="身份证反面照"
                        android:textColor="@color/text333"
                        android:textSize="@dimen/x12" />


                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginTop="@dimen/x10"
                android:text="请上传身份证照片"
                android:textColor="@color/text666"
                android:textSize="@dimen/x15" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x15"
                android:layout_marginTop="@dimen/x15"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="@dimen/x140"
                        android:layout_height="@dimen/y84"
                        android:background="@color/bgfff"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/x50"
                            android:layout_height="@dimen/y37"
                            android:layout_centerInParent="true"
                            android:src="@mipmap/getphoto" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/x5"
                        android:text="手持身份证照"
                        android:textColor="@color/text333"
                        android:textSize="@dimen/x12" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x10"
                    android:orientation="vertical"
                    android:visibility="invisible">

                    <RelativeLayout
                        android:layout_width="@dimen/x140"
                        android:layout_height="@dimen/y84"
                        android:background="@color/bgfff"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/x50"
                            android:layout_height="@dimen/y37"
                            android:layout_centerInParent="true"
                            android:src="@mipmap/getphoto" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/x5"
                        android:text="身份证反面照"
                        android:textColor="@color/text333"
                        android:textSize="@dimen/x12" />


                </LinearLayout>


            </LinearLayout>

            <Button
                android:layout_width="@dimen/x262"
                android:layout_height="@dimen/y33"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/x30"
                android:layout_marginTop="@dimen/x15"
                android:background="@drawable/bg_login_btn"
                android:text="提交"
                android:textColor="@color/bgfff" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
