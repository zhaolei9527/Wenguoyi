<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x42"
            android:background="@color/bgtitle"
            android:visibility="visible">

            <FrameLayout
                android:id="@+id/rl_back"
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/x30"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x10">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:background="@mipmap/fanhui" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="会员升级"
                android:textColor="@color/bgfff"
                android:textSize="@dimen/x16" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_dengji"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y47"
            android:layout_marginLeft="@dimen/x10"
            android:gravity="center_vertical"
            android:text="您当前会员等级：D级合伙人"
            android:textColor="@color/text333"
            android:textSize="@dimen/x16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y2"
            android:background="@color/bgea"></View>


        <LinearLayout
            android:id="@+id/ll_A"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y90"
            android:gravity="center_vertical"
            android:visibility="gone">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/SimpleDraweeViewA"
                android:layout_width="@dimen/x74"
                android:layout_height="@dimen/x74"
                android:layout_marginLeft="@dimen/x10" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x5"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_titleA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A级合伙人"
                    android:textColor="@color/text333"
                    android:textSize="@dimen/x15" />


                <TextView
                    android:id="@+id/tv_moneyA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FF3064"
                    android:textSize="@dimen/x15" />

                <TextView
                    android:id="@+id/tv_contentA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/text666"
                    android:textSize="@dimen/x15" />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_B"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y90"
            android:gravity="center_vertical"
            android:visibility="gone">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/SimpleDraweeViewB"
                android:layout_width="@dimen/x74"
                android:layout_height="@dimen/x74"
                android:layout_marginLeft="@dimen/x10" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x5"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_titleB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="B级合伙人"
                    android:textColor="@color/text333"
                    android:textSize="@dimen/x15" />

                <TextView
                    android:id="@+id/tv_moneyB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FF3064"
                    android:textSize="@dimen/x15" />

                <TextView
                    android:id="@+id/tv_contentB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/text666"
                    android:textSize="@dimen/x15" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_C"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y90"
            android:gravity="center_vertical"
            android:visibility="gone">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/SimpleDraweeViewC"
                android:layout_width="@dimen/x74"
                android:layout_height="@dimen/x74"
                android:layout_marginLeft="@dimen/x10" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x5"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_titleC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C级合伙人"
                    android:textColor="@color/text333"
                    android:textSize="@dimen/x15" />

                <TextView
                    android:id="@+id/tv_moneyC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FF3064"
                    android:textSize="@dimen/x15" />

                <TextView
                    android:id="@+id/tv_contentC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/text666"
                    android:textSize="@dimen/x15" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</RelativeLayout>
